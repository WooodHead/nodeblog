extends layout

block content
    .container
        .row
            .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                if posts
                    each post, i in posts
                        .post-preview
                            a(href='/post/show/#{post.id}')
                                h2.post-title
                                    =post.title
                            p.post-meta Posted by #{post.author} on #{moment(post.date).format('LLLL')}
                        hr
                // Pager
                ul.pager
                    li.next
                        a(href='#') Older Posts &rarr;
    hr
